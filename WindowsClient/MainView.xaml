<UserControl x:Class="Overmind.ImageManager.WindowsClient.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:main="clr-namespace:Overmind.ImageManager.WindowsClient"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=main:MainViewModel}"
             d:DesignHeight="500" d:DesignWidth="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- IsFocusScope is set to ensure any active control lose focus and gets its binding updated
             See https://stackoverflow.com/questions/57493/wpf-databind-before-saving -->
        <Menu Grid.Row="0" FocusManager.IsFocusScope="False">
            <MenuItem Header="File">
                <MenuItem Header="New collection" Click="CreateCollection"/>
                <MenuItem Header="Open collection" Click="LoadCollection"/>
                <MenuItem Header="Save collection" Command="{Binding Path=SaveCollectionCommand}"/>
                <MenuItem Header="Close collection" Command="{Binding Path=CloseCollectionCommand}"/>
                <Separator/>
                <MenuItem Header="Export query" Click="ExportQuery" IsEnabled="{Binding Path=CanExportQuery}"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" DataContext="{Binding Path=ActiveCollection}">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <Trigger Property="DataContext" Value="{x:Null}">
                            <Setter Property="IsEnabled" Value="False"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <main:CollectionView Grid.Row="2"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Click="ShowDownloader" Content="Add Images" Margin="5" Padding="5"/>
                </StackPanel>

                <Image Grid.Row="1" DataContext="{Binding Path=SelectedImage}"
                       Source="{Binding Path=FilePath, Converter={StaticResource DefaultImageConverter}}"
                       Margin="5" MaxHeight="200" RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.InputBindings>
                        <MouseBinding Gesture="LeftDoubleClick" Command="{Binding Path=ViewCommand}"/>
                    </Image.InputBindings>
                </Image>

                <main:ImagePropertiesView Grid.Row="2" DataContext="{Binding Path=SelectedImageProperties}" Margin="5">
                    <main:ImagePropertiesView.Style>
                        <Style TargetType="main:ImagePropertiesView">
                            <Style.Triggers>
                                <Trigger Property="DataContext" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </main:ImagePropertiesView.Style>
                </main:ImagePropertiesView>

                <Grid Grid.Row="3">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=SelectedImage}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="MinWidth" Value="50"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="Open"/>
                        <Button Content="Edit"/>
                        <Button Content="Restart Download"/>
                    </StackPanel>
                    <Button Grid.Column="2" Content="Remove" Command="{Binding Path=RemoveImageCommand}"/>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
