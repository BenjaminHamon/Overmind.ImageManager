<UserControl x:Class="Overmind.ImageManager.WindowsClient.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:main="clr-namespace:Overmind.ImageManager.WindowsClient"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=main:MainViewModel}"
             d:DesignHeight="300" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- IsFocusScope is set to ensure any active control lose focus and gets its binding updated
             See https://stackoverflow.com/questions/57493/wpf-databind-before-saving -->
        <Menu Grid.Row="0" FocusManager.IsFocusScope="False">
            <MenuItem Header="File">
                <MenuItem Header="New collection" Click="CreateCollection"/>
                <MenuItem Header="Open collection" Click="LoadCollection"/>
                <MenuItem Header="Save collection" Command="{Binding Path=SaveCollectionCommand}"/>
                <MenuItem Header="Close collection" Command="{Binding Path=CloseCollectionCommand}"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" DataContext="{Binding Path=ActiveCollection}">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <Trigger Property="DataContext" Value="{x:Null}">
                            <Setter Property="IsEnabled" Value="False"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <main:CollectionView Grid.Row="2"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Click="ShowDownloader" Content="Add" Margin="5" Padding="5" MinWidth="50"/>
                    <Button Command="{Binding Path=RemoveImageCommand}" Content="Remove" Margin="5" Padding="5"/>
                </StackPanel>
                <DockPanel Grid.Row="1" DataContext="{Binding Path=SelectedImageProperties}">
                    <DockPanel.Style>
                        <Style TargetType="DockPanel">
                            <Style.Triggers>
                                <Trigger Property="DataContext" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Image DockPanel.Dock="Top" Source="{Binding Path=FilePath, Converter={StaticResource DefaultImageConverter}}"
                           Margin="5" MaxHeight="200" RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.InputBindings>
                            <MouseBinding Gesture="LeftDoubleClick" Command="{Binding Path=ViewCommand}"/>
                        </Image.InputBindings>
                    </Image>
                    <main:ImagePropertiesView DockPanel.Dock="Top" Margin="5"/>
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
